<template name="postItem">
    <view class="post-container">
        <view class="post-avatar-date">
            <image class="post-avatar" src="{{avatar}}"></image>
            <text class="post-date">{{date}}</text>
        </view>
        <text class="post-title">{{title}}</text>
        <image class="post-cover" src="{{cover}}"></image>
        <text class="post-content">{{content}}</text>
        <view class="post-info">
            <image class="post-info-img" src="/images/icon/chat.png"></image>
            <text class="post-info-num">{{collection}}</text>
            <image class="post-info-img" src="/images/icon/view.png"></image>
            <text class="post-info-num">{{view}}</text>
        </view>
    </view>
</template>