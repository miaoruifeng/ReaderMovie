.post-container {
    display: flex;
    flex-direction: column;
    margin: 20rpx 0;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
}
.post-avatar-date {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 10px;
    margin-top: 20rpx;
}
.post-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}
.post-date {
    font-size: 13px;
    margin-left: 20rpx;
}
.post-title {
    padding-left: 10px;
    margin: 20rpx 0;
    font-size: 16px;
    font-weight: bold;
    color: #333;
}
.post-cover {
    width: 100%;
    height: 340rpx;
}
.post-content {
    padding: 0 10px;
    margin-top: 20rpx;
    font-size: 12px;
    color: #666;
    letter-spacing: 2rpx;
}
.post-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 10px;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}
.post-info-img {
    width: 32rpx;
    height: 32rpx;
}
.post-info-num {
    font-size: 12px;
    color: #999;
    margin-left: 10rpx;
    margin-right: 60rpx;
}