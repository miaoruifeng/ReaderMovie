.container {
    display: flex;
    flex-direction: column;
}

.head-img {
    width: 100%;
    height: 460rpx;
}

.audio {
    width: 110rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 175rpx;
    opacity: 0.6;
}

.author-date {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
    padding-left: 10px;
}

.avatar-img {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.author {
    margin-left: 20rpx;
    font-size: 14px;
    color: #333;
}

.const-text {
    margin-left: 40rpx;
    margin-right: 10rpx;
    color: #999;
}

.date {
    color: #999;
}

.title {
    padding-left: 10px;
    margin-top: 20rpx;
    font-size: 16px;
    font-weight: bold;
    color: #333;
}

.tool {
    margin-top: 20rpx;
    vertical-align: middle;
}

.tool-img {
    float: right;
    margin-right: 10px;
}

.tool-img image {
    width: 80rpx;
    height: 80rpx;
    margin-left: 20rpx;
    vertical-align: middle;
}

.line {
    width: 85%;
    height: 1px;
    background-color: #ededed;
    margin: 0 auto;
    position: relative;
    top: 40rpx;
    z-index: -100;
}

.detail {
    padding: 0 10px;
    margin-top: 20rpx;
    font-size: 14px;
    color: #666;
    letter-spacing: 2rpx;
    padding-bottom: 20rpx;
}
