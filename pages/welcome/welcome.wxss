page {
    height: 100%;
    background-color: #b3d4db;
}
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #b3d4db;
}
.avatar-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 160rpx;
}
.motto {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-top: 60rpx;
}
.start-container {
    display: flex;
    align-items: center;
    margin-top: 280rpx;
    padding: 6px 10px;
    border: 1px solid #405f80;
    border-radius: 4px;
    text-align: center;
}
.start-text {
    font-size: 12px;
    color: #405f80;
}
