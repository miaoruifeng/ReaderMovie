<template name="postItem">
    <view class="container">
        <view class="post-avatar-date">
            <image class="post-avatar" src="{{item.avatar}}"></image>
            <text class="post-date">{{item.date}}</text>
        </view>
        <text class="post-title">{{item.title}}</text>
        <image class="post-cover" src="{{item.cover}}"></image>
        <text class="post-content">{{item.content}}</text>
        <view class="post-info">
            <image class="post-info-img" src="/images/icon/chat.png"></image>
            <text class="post-info-num">{{item.collection}}</text>
            <image class="post-info-img" src="/images/icon/view.png"></image>
            <text class="post-info-num">{{item.view}}</text>
        </view>
    </view>
</template>